void drawDigit(int x, int y, int digit) {
  byte segs = digitSegments[digit];
  
  // Draw segments in order: top, top-R, bot-R, bot, bot-L, top-L, mid
  if (segs & 0b1000000) display.drawBitmap(x, y, epd_bitmap_seg0, 32, 64, 0);      // top
  if (segs & 0b0100000) display.drawBitmap(x, y, epd_bitmap_seg1, 32, 64, 0);      // top-right
  if (segs & 0b0010000) display.drawBitmap(x, y, epd_bitmap_seg2, 32, 64, 0);      // bottom-right
  if (segs & 0b0001000) display.drawBitmap(x, y, epd_bitmap_seg3, 32, 64, 0);   // bottom
  if (segs & 0b0000100) display.drawBitmap(x, y, epd_bitmap_seg4, 32, 64, 0);      // bottom-left
  if (segs & 0b0000010) display.drawBitmap(x, y, epd_bitmap_seg5, 32, 64, 0);      // top-left
  if (segs & 0b0000001) display.drawBitmap(x, y, epd_bitmap_seg6, 32, 64, 0);      // middle
}

